unit ClassPessoa;

interface
type

  Pessoa = class abstract

  private
    var
    VNome : String;
    VEndereco : String;

  public
    property Nome : string read VNome write VNome; //Método de acesso para as outras classes
    property Endereco : string read VEndereco write VEndereco;
    function Imprime: string; virtual; abstract;

  end;
implementation

end.
